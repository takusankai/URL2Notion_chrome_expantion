{
    "manifest_version": 2,
    "name": "URL Reader",
    "version": "1.0",
    "description": "現在のタブのURLとタイトルを取得するChrome拡張機能",
    "permissions": [
    "tabs",
    "activeTab"
    ],
    "background": {
    "scripts": ["URL_reader.js"],
    "persistent": false
    },
    "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
    }
}