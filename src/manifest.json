{
    "manifest_version": 3,
    "name": "URL Reader",
    "version": "1.0",
    "description": "現在のタブのURLとタイトルを取得するChrome拡張機能",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://api.notion.com/*"
    ],
    "background": {
        "service_worker": "URL_reader.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    }
}